{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "authentication",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "views",
        "outDir": "dist",
        "watchAssets": true
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  },
  "generateOptions": {
    "spec": false
  }
}